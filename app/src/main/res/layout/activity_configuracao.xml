<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gps.unifacs.projetogps.ConfiguracaoActivity"
    android:rowCount="20"
    android:columnCount="16">

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/GrausDecimais"
            android:id="@+id/radioGraus"
            android:checked="false"
            android:layout_marginTop="60dp"
            android:onClick="radioClick" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GrausMinDecimais"
            android:id="@+id/radioMinutos"
            android:onClick="radioClick" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GrauMinSecDecimais"
            android:id="@+id/radioSegundos"
            android:layout_marginBottom="60dp"
            android:onClick="radioClick" />
    </RadioGroup>

</RelativeLayout>
